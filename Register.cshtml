<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS Eklemesi -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            color: #fff;
            padding-top: 50px;
            text-align: center;
        }

        .navbar {
            background-color: #000;
        }

        .navbar-dark .navbar-toggler-icon {
            background-color: #fff;
        }

        .navbar-nav {
            margin: auto;
        }

        .nav-item {
            padding: 0 15px;
        }

            .nav-item a {
                color: #fff;
                text-decoration: none;
            }

            .nav-item:hover {
                background-color: #555;

            }

            .nav-item.active {
                background-color: #888;
                border-radius: 5px;
            }

                .nav-item.active a {
                    color: #000;
                
                }

        .navbar-brand img {
            width: 1100px;
            height: auto;
            
        }

        .image-container {
            position: relative;
        }

        .overlay-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
           
            font-size: 34px;
           
            font-weight: bold;
            
        }

        div {
            text-align: center;
            margin-top: 20px;
        }

        button {
            padding: 10px 20px;
            background-color: black;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: gray;
                border: none;
            }

        .footer {
            width: 100%;
        }

        .register {
            background-image: url('https://img.pixers.pics/pho_wat(s3:700/FO/22/58/88/62/0/700_FO225888620_c4dfb0a92674ddba576ab6272961bcb8,700,467,cms:2018/10/5bd1b6b8d04b8_220x50-watermark.png,over,480,417,jpg)/duvar-resimleri-sukran-gunu-yemegi-arka-plan.jpg.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            height: 500px;
            width: 100%;
            opacity:0.9;
        }


        .form-control {
            border: none;
            border-bottom: 1px solid black;
            border-radius: 0;
        }

        .button-style {
            margin-right: 500px;
            padding: 5px 40px;
            border-radius: 15px;
            background-color: black;
            color: white; 
            border: none; 
            cursor: pointer;
        }

            .button-style:hover {
                background-color: gray; 
            }

    </style>
</head>

<body>
    <!-- Navbar eklendi-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="width:100%;">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item ">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact Us</a>
                    </li>

                    <li class="nav-item ps-5">
                        <a class="nav-link" href="#">Login</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Register</a>
                    </li>
                </ul>
                <!-- Navbar altına Kayıt için Form oluşturuldu -->
            </div>
        </div>
    </nav>
    <div class="register">
        <form method="post">
            <div class="mb-3" style="margin-right:600px;color:white;">
                <label for="exampleInputEmail1" class="form-label">User Name</label>
                <input type="text" class="form-control bg-transparent" id="exampleInputEmail1" name="UserName" placeholder="Kullanıcı_adı" style="width:100%; color: white;">
            </div>
            <div class="mb-3" style="margin-right:600px;color:white;">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control bg-transparent" id="exampleInputEmail1" name="UserMail" placeholder="E-posta" style="width:100%; color: white;">
            </div>
            <div class="mb-3" style="margin-right:600px;color:white;">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control bg-transparent" name="PasswordHash" id="exampleInputPassword1" placeholder="Şifre" style="width:100%; color: white;">
            </div>
            <div class="mb-3" style="margin-right:600px;color:white;">
                <label for="exampleInputPassword2" class="form-label">Confirm Password</label>
                <input type="password" class="form-control bg-transparent" name="ConfirmPassword" id="exampleInputPassword2" placeholder="Şifreyi Onayla" style="width:100%; color: white;">
            </div>
            <button type="submit" class="btn button-style">Register</button>
        </form>
        <!--Hata mesajı-->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p style="color: red;">@Model.ErrorMessage</p>
        }
    </div>

